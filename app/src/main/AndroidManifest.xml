<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tssg.eventboss2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />


    <application
        android:theme="@android:style/Theme.Holo.Light"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:allowBackup = "false" >

        <activity
            android:name="com.tssg.eventboss2.EB2MainActivity"
            android:label="@string/app_name"
            android:configChanges="keyboardHidden|orientation|screenSize" >
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.tssg.eventboss2.SettingsActivity"
            android:label="@string/menu_settings" >
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
                <action android:name="com.tssg.eventboss2.SettingsActivity" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.tssg.eventboss2.EventDetailActivity"
            android:label="@string/title_activity_event_display" >
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
                <action android:name="com.tssg.eventboss2.EventDetailActivity" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.tssg.eventboss2.SaveListDisplayActivity"
            android:label="@string/title_activity_savelist_display" >
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
                <action android:name="com.tssg.eventboss2.SaveListDisplayActivity" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.tssg.find.SearchActivity"
            android:label="@string/titleSearch" >
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
                <action android:name="com.tssg.find.SearchActivity" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.tssg.find.FilterCriteria"
            android:screenOrientation="unspecified"
            android:label="@string/app_name_criteria" >
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
                <action android:name="com.tssg.find.FilterCriteria" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.tssg.find.EventTypeList"
            android:label="@string/show_event_types" >
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
                <action android:name="com.tssg.find.EventTypeList" />
            </intent-filter>
        </activity>

    </application>

</manifest>
